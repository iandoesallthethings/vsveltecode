{
	"name": "vsveltecode",
	"displayName": "vsveltecode",
	"description": "A template for vscode webviews using svelte",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": ""
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.97.0"
	},
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"compile:production": "npm run check-types && npm run lint && node esbuild.js --production",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"vscode:prepublish": "npm run compile:production",
		"package": "vsce package",
		"publish": "vsce publish",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "vsveltecode.helloWorld",
				"title": "VSvelteCode: Hello World",
				"icon": "$(globe)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "vsveltecode.helloWorld",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "vsveltecode.helloWorld",
				"key": "ctrl+alt+h",
				"mac": "ctrl+alt+h",
				"when": "editorTextFocus"
			}
		]
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.97.0",
		"@typescript-eslint/eslint-plugin": "^8.24.0",
		"@typescript-eslint/parser": "^8.24.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.25.0",
		"eslint": "^9.20.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.7.3",
		"vsce": "^2.15.0"
	}
}
